<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.min.js" type="text/javascript"></script>
	<script src="@Url.Content("~/scripts/imprint.js")" type="text/javascript"></script>
	<link href="@Url.Content("~/content/imprint.css")" rel="stylesheet" type="text/css" />
</head>
<body>
	@if (User.Identity.IsAuthenticated)
 {
		<nav id="account">
			@Html.ActionLink("Log out", "logout", "account", new { ReturnUrl = Request.Url.AbsolutePath }, null)</nav>
 }
	<header>
		<h1>@ViewBag.Title</h1>
	</header>
	@RenderBody()
</body>
</html>
