@model ContactArticle
@using (Html.BeginForm())
{
	@Html.ValidationSummary(true)
<fieldset class="fields">
    <p>
        @Html.LabelFor(model => model.Title, Phrases.LabelTitle)<br />
        @Html.TextBoxFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </p>
    <p>
        @Html.LabelFor(model => model.GroupId, Phrases.LabelArticleGroup)<br />
        @Html.DropDownListFor(model => model.GroupId, (SelectList)ViewBag.Groups, "–")
        @Html.ValidationMessageFor(model => model.GroupId)
    </p>
    <p>
        @Html.LabelFor(model => model.BodyText, Phrases.LabelBodyText)<br />
        @Html.TextAreaFor(model => model.BodyText, new { @class = "rich" })
        @Html.ValidationMessageFor(model => model.BodyText)
    </p>
</fieldset>
	<fieldset class="hidden">
		@Html.HiddenFor(model => model.SequenceIdentifier)
	</fieldset>
	<fieldset class="buttons">
		<p>
			<input type="submit" value="@Phrases.LabelSave" />
		</p>
	</fieldset>
}
