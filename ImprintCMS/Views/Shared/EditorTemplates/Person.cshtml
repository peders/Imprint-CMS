@model Person
@using (Html.BeginForm())
{
	@Html.ValidationSummary(true)
	<fieldset class="fields">
		<p>
			@Html.LabelFor(model => model.FirstName, Phrases.LabelFirstName)<br />
			@Html.TextBoxFor(model => model.FirstName)
			@Html.ValidationMessageFor(model => model.FirstName)
		</p>
		<p>
			@Html.LabelFor(model => model.LastName, Phrases.LabelLastName)<br />
			@Html.TextBoxFor(model => model.LastName)
			@Html.ValidationMessageFor(model => model.LastName)
		</p>
		<p>
			@Html.LabelFor(model => model.Description, Phrases.LabelDescription)<br />
			@Html.TextAreaFor(model => model.Description, new { @class = "rich" })
			@Html.ValidationMessageFor(model => model.Description)
		</p>
		<p>
			@Html.LabelFor(model => model.Awards, Phrases.LabelAwards)<br />
			@Html.TextAreaFor(model => model.Awards, new { @class = "rich" })
			@Html.ValidationMessageFor(model => model.Awards)
		</p>
		<p>
			@Html.LabelFor(model => model.Translations, Phrases.LabelTranslations)<br />
			@Html.TextAreaFor(model => model.Translations, new { @class = "rich" })
			@Html.ValidationMessageFor(model => model.Translations)
		</p>
		<p>
			@Html.LabelFor(model => model.Anthologies, Phrases.LabelAnthologies)<br />
			@Html.TextAreaFor(model => model.Anthologies, new { @class = "rich" })
			@Html.ValidationMessageFor(model => model.Anthologies)
		</p>
	</fieldset>
	<fieldset class="options">
		<p>
			@Html.CheckBoxFor(model => model.IsVisible)
			@Html.LabelFor(model => model.IsVisible, Phrases.LabelIsVisible)
		</p>
		<p>
			@Html.CheckBoxFor(model => model.HasPage)
			@Html.LabelFor(model => model.HasPage, Phrases.LabelHasPage)
		</p>
	</fieldset>
	<fieldset class="submit">
        <p>
            <input type="submit" value="@Phrases.LabelSave" />
            @Html.ActionLink(string.Format(Phrases.LabelBackTo, Phrases.PagenamePersons), "people", "admin")
        </p>
	</fieldset>
}
