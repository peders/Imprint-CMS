<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js" type="text/javascript"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.17/jquery-ui.min.js" type="text/javascript"></script>
	<link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.17/themes/pepper-grinder/jquery-ui.css"
		rel="stylesheet" type="text/css" />
	<script type="text/javascript" src="@Url.Content("~/scripts/tiny_mce/jquery.tinymce.js")"></script>
	<script src="@Url.Content("~/scripts/admin.js")" type="text/javascript"></script>
	<link href="@Url.Content("~/content/admin.css")" rel="stylesheet" type="text/css" />
	<script type="text/javascript">
		$(function () {
			$('textarea.rich').tinymce({
				script_url: '@Url.Content("~/scripts/tiny_mce/tiny_mce.js")',
				content_css: '@Url.Content("~/content/tiny_mce.css")',
				theme: 'advanced',
				theme_advanced_toolbar_location: 'top',
				theme_advanced_buttons1: 'bold,italic,|,bullist,|,link,unlink,|,undo,redo,|,cleanup,code',
				theme_advanced_buttons2: false,
				theme_advanced_buttons3: false
			});
		});
	</script>
</head>
<body>
    <header>
        <h1>@Html.ActionLink(Phrases.SystemName, "index", "admin")</h1>
        <ul id="breadcrumbs">
            @foreach (HtmlString crumb in ViewBag.Breadcrumbs)
            {
                <li>@crumb</li>
            }
        </ul>
        <div id="sitelink">@Html.ActionLink(Phrases.SystemViewSite, "index", "home")</div>
        @if (User.Identity.IsAuthenticated)
        {
            <div id="account">@Html.ActionLink(String.Format(Phrases.LabelLogOut, User.Identity.Name), "logout", "account", new { ReturnUrl = Request.Url.AbsolutePath }, null)</div>
        }
    </header>
	<div id="content">
		@RenderBody()
	</div>
</body>
</html>
