<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/content/site.css")" rel="stylesheet" type="text/css" />
	<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js" type="text/javascript"></script>
	<script src="@Url.Content("~/scripts/site.js")" type="text/javascript"></script>
</head>
<body>
	<header>
		<h1>@Html.ActionLink((string)ViewBag.Title, "index", "home")</h1>
	</header>
	<nav id="sitemenu">
		<ul>
			<li class="@(ViewContext.ControllerName().ToLower() == "home" ? "selected" : string.Empty)">@Html.ActionLink(Phrases.SitemenuHome, "index", "home")</li>
			<li class="@(ViewContext.ControllerName().ToLower() == "books" ? "selected" : string.Empty)">@Html.ActionLink(Phrases.SitemenuBooks, "index", "books", new { id = UrlParameter.Optional }, null)</li>
			<li class="@(ViewContext.ControllerName().ToLower() == "authors" ? "selected" : string.Empty)">@Html.ActionLink(Phrases.SitemenuAuthors, "index", "authors")</li>
		</ul>
	</nav>
	<section id="content" class="@String.Format("{0} {1}", ViewContext.ControllerName().ToLower(), ViewContext.ActionName().ToLower())">
		@RenderBody()
		<div id="floatbreaker"></div>
	</section>
	<footer>@(new HtmlString(Phrases.SystemSiteFooter))
	</footer>
</body>
</html>
