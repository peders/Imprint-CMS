@model IEnumerable<Article>
@{
	ViewBag.Title = Phrases.PagenameArticles;
	ViewBag.Breadcrumbs = new[] {
		Phrases.PagenameArticles.ToHtmlString()
	};
}
<ul class="adminactions">
	<li>@Html.ActionLink(Phrases.PagenameCreateArticle, "createarticle")</li>
</ul>
<ul class="listing">
	@foreach (var article in Model)
 {
		<li><span class="name">@Html.ActionLink(article.Title, "editarticle", new { id = article.Id })</span>
			<span class="data">@String.Format("{0:D}", article.Date)</span>
			@Html.ActionLink(Phrases.LabelDelete, "deletearticle", new { id = article.Id })</li>
 }
</ul>
