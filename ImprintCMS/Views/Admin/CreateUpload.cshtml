@model FileUpload
@{
	ViewBag.Title = Phrases.PagenameCreateUpload;
	ViewBag.Breadcrumbs = new[] {
		Html.ActionLink(Phrases.PagenameUploads, "uploads"),
		Phrases.PagenameCreateUpload.ToHtmlString()
	};
}
<form action="" method="post" enctype="multipart/form-data">
@Html.ValidationSummary(false)
<fieldset class="fields">
	<p>
		<label for="file">@Phrases.LabelSelectFile</label><br />
		<input type="file" name="file" id="file" />
	</p>
	<p>
		@Html.LabelFor(model => model.FileCategory, Phrases.LabelFileCategory)<br />
		@Html.DropDownListFor(model => model.FileCategory, (SelectList)ViewBag.FileCategories)
	</p>
</fieldset>
<fieldset class="submit">
	<p>
		<input type="submit" value="@Phrases.LabelSubmit" />
	</p>
</fieldset>
</form>
