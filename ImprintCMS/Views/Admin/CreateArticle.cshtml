@model Article
@{
	ViewBag.Title = Model.IsForContactPage ? Phrases.PagenameCreateContactArticle : Phrases.PagenameCreateNewsArticle;
	ViewBag.Breadcrumbs = new[] {
		Model.IsForContactPage ? Html.ActionLink(Phrases.PagenameContactArticles, "contactarticles") : Html.ActionLink(Phrases.PagenameNewsArticles, "newsarticles"),
		new HtmlString(Model.IsForContactPage ? Phrases.PagenameCreateContactArticle : Phrases.PagenameCreateNewsArticle)
	};
}
@Html.EditorForModel()
