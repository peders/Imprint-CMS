@model IEnumerable<MenuShortcut>
@{
	ViewBag.Title = Phrases.PagenameMenuShortcuts;
	ViewBag.Breadcrumbs = new[] {
		Phrases.PagenameMenuShortcuts.ToHtmlString()
	};
}
<ul class="adminactions">
	<li>@Html.ActionLink(Phrases.PagenameCreateMenuShortcut, "createshortcut")</li>
</ul>
<ul class="listing sortable" data-persisturl="@Url.Action("storeshortcutorder")" data-handlelabel="@Phrases.LabelDragAndDropToSort" data-errorlabel="@Phrases.ValidationAjaxError">
	@foreach (var shortcut in Model)
    {
		<li id="@String.Format("sortitem_{0}", shortcut.Id)"><span class="name">@Html.ActionLink(shortcut.Name, "editshortcut", new { id = shortcut.Id })</span>
			@Html.ActionLink(Phrases.LabelDelete, "deleteshortcut", new { id = shortcut.Id })</li>
 }
</ul>
