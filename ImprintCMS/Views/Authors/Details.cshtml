@model PersonPage
@{
	ViewBag.Title = Model.Person.FullName;
}
@if (Model.Person.SmallImageId != null)
{
	<div id="personimage">
		<img src="@Url.Action("display", "upload", new { category = Model.Person.UploadedFile.Category, fileName = Model.Person.UploadedFile.FileName }, null)" class="image" alt="@Model.Person.FullName" title="@Model.Person.FullName" /><br />
		@String.Format(Phrases.LabelPhotoCredit, Model.Person.PhotographerCredit)
	</div>
}
<h1>@Model.Person.FullName</h1>
@if (!String.IsNullOrWhiteSpace(Model.Person.Description))
{
	@Model.Person.Description.ToRichText()
}
@if (Model.Books.Any())
{
	<h2>@Phrases.HeadingAuthorBooks</h2>
	<ul>
		@foreach (var book in Model.Books)
  {
			<li>@book.PersonPageEntry</li>
  }</ul>
}
@if (!String.IsNullOrWhiteSpace(Model.Person.Awards))
{
	<h2>@Phrases.HeadingAuthorAwards</h2>
	@Model.Person.Awards.ToRichText()
}
@if (!String.IsNullOrWhiteSpace(Model.Person.Translations))
{
	<h2>@Phrases.HeadingAuthorTranslations</h2>
	@Model.Person.Translations.ToRichText()
}
@if (!String.IsNullOrWhiteSpace(Model.Person.Anthologies))
{
	<h2>@Phrases.HeadingAuthorAnthologies</h2>
	@Model.Person.Anthologies.ToRichText()
}
