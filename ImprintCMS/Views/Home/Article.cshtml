@model Article
@{
    ViewBag.Title = Model.Title;
}
<div id="main">
    <section class="title">
        <h1>@Model.Title</h1>
    </section>
    @Model.Description.ToRichText()
    @Html.ArticleLinks(Model)
    <p class="social">
        @Html.Twitter(Model.Title, string.Empty)<br />
        @Html.Facebook()
    </p>
</div>
<div id="sidebar">
    @Html.ArticleChosenImage(Model)
    @Html.ArticleImageCredit(Model)
</div>
